<div class="background">
  <br>
  <h1>Hamberders and Covfefe!</h1>

  <div class="row">
    <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">

      <h2>Berders that are not devoured!</h2>

      <ol class="left">
        {{#each burgers}}
          {{#unless devoured}}
            <li>
              {{burger_name}}

              <form action="/{{id}}?_method=PUT" method="POST">
                <input type="hidden" name="devoured" value="true">
                <button type="submit">Devour it!</button>
              </form>

              {{> burgers/delete-burger}}
            </li>
          {{/unless}}
        {{/each}}
      </ol>
    </div>


    <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
      <img src="/assets/img/hamburger-img.png" alt="">
    </div>

    <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
      <h2>Berders that are devoured!</h2>

      <ol>
        {{#each burgers}}
          {{#if devoured}}
            <li>
              {{burger_name}}

              <form action="/{{id}}?_method=PUT" method="POST">
                <input type="hidden" name="devoured" value="false">
                <button type="submit">Order another one!</button>
              </form>

            </li>
          {{/if}}
        {{/each}}
      </ol>
      </div>
  </div>

  <h2>Add a Berder</h2>
  <form class="create-update-form" action="/" method="POST">

    <div class="form-group">
      <label for="ca">Berder Name:</label>
      <input type="text" id="ca" name="burger_name">
    </div>

    <div class="form-group">
      <label for="sleepy">Ready to order?</label><br>
      <input type="radio" name="sleepy" value="0" checked> New Order!
    </div>

    <button type="submit">Add Berder</button>
  </form>

</div>
