<div class="background">

<div class="container">

  <br>
  
  <h1>Eat Da Burger!</h1>

  <div class="row" >

    <div class="col-md-4">

        <h2>Burgers that are not eaten!</h2>

          <ol class="left">
              {{#each burgers}}
              {{#unless this.eaten}}

              <li>
                  {{this.name}}

                  <form action="/{{this.id}}?_method=PUT" method="POST">
                      <input type="hidden" name="eaten" value="true">
                      <button type="submit">Devour it!</button>
                  </form>

                  {{> burgers/delete-burger}}

              </li>

              {{/unless}}
              {{/each}}
          </ol>

    </div>


    <div class="col-md-4">

      <img src="/assets/img/hamburger-img.png" alt="">

    </div>

      <div class="col-md-4">

            <h2>Burgers that are eaten!</h2>

              <ol>

                  {{#each burgers}}
                  {{#if this.eaten}}

                <li>
                    {{this.name}}

                    <form action="/{{this.id}}?_method=PUT" method="POST">

                        <input type="hidden" name="eaten" value="false">
                        <button type="submit">Order another one!</button>
                    </form>

                </li>

                  {{/if}}
                  {{/each}}
                </ol>

      </div>
    </div>

        <h2>Add a Burger</h2>
                    <form class="create-update-form" action="/" method="POST">

                    <div class="form-group">
                          <label for="ca">Burger Name:</label>
                          <input type="text" id="ca" name="name">
                    </div>

                    <div class="form-group">
                          <label for="sleepy">Ready to order?</label><br>
                          <input type="radio" name="sleepy" value="0" checked> Order up!
                    </div>

                            <button type="submit">Add Burger</button>

                    </form>

</div>
</div>